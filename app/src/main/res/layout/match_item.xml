<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搭配名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weather_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天氣種類"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hat_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Hat Image"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/clothes_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Clothes Image"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/pants_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Pants Image"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/shoes_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Shoes Image"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
    </LinearLayout>


    <!--    <TextView-->
<!--        android:id="@+id/tags"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="標籤:"-->
<!--        android:padding="8dp"/>-->
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#AAA09E" />

</LinearLayout>
